<!DOCTYPE html>
<html>
  <head>
    <title>회원가입</title>
    <link rel="stylesheet" href="/css/joinPage/joinMember.css">
    <link rel="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css">
    <!-- <script
        src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Nanum+Gothic+Coding&display=swap" rel="stylesheet">
  </head>

  <body>
    <div class="container">
      <div class="form-sign-in-container">
        <div id="join_title">
        <h1>회원가입</h1>
        </div>
        <!-- form 태그 값 서버로 전송
        <form action="/signUpPro" method="post"> -->
          <!-- 이메일 -->
        <div class="content">
        <input type="email" placeholder="이메일" id="id" name="email" class="id" maxlength="30" />
        <!-- 이메일 중복확인 -->
        <button id="checkBtn" class="checkbtn_disable" disabled>중복확인</button>
        </div>
        <!-- 이메일 정규식에 맞게 작성되었는지 check -->
        <div class="emailcheck textStart"></div>
          <!-- 비밀번호 -->
          <div class="content">
          <input
            type="password"
            placeholder="비밀번호"
            id="password"
            name="password"
            class="id"
            maxlength="20"
          />
          </div>
          <!-- 비밀번호 정규식에 맞게 작성되었는지 check -->
          <div class="passwordcheck emailcheck textStart"></div>
            <!-- 비밀번호 확인 -->
          <div class="content">
          <input
            type="password"
            placeholder="비밀번호 확인"
            id="password_a"
            name="cpassword"
            class="id"
            maxlength="20"
          />
          </div>
          <!-- 비밀번호 확인 정규식에 맞게 작성되었는지 check -->
          <div class="passwordre emailcheck textStart"></div>
          <!-- 이름 -->
          <div class="content">
          <input
            type="text"
            placeholder="이름"
            id="name"
            name="name"
            class="id"
            maxlength="10"
          />
          </div>
          <!-- 이름 정규식에 맞게 작성되었는지 check -->
          <div class="namecheck emailcheck textStart"></div>

          <!-- 연락처 -->
          <div class="content">
          <input
            type="text"
            placeholder="연락처(- 없이 입력)"
            id="phoneNum"
            name="phone"
            class="phoneNum"
            maxlength="20"
          />
          </div>
          <!-- 연락처 정규식에 맞게 작성되었는지 check -->
          <div class="phonecheck emailcheck textStart"></div>
          <!-- 생년월일 -->
          <div class="content">
            <span class="birthName">생년월일</span>
          <input
            type="date"
            id="birth"
            name="birth"
            class="birth"
          />
          </div>
          <!-- 회원가입 완료 button -->
          <button
            type="submit"
            class="btn"
            disabled="disabled"
          >
            회원가입 완료
          </button>
        <!-- </form> -->
      </div>

    <script>

      // 회원가입 버튼 활성화 조건(1)
      let idAble = 0;

      // email 중복확인 버튼 클릭시 이벤트
      document.querySelector('#checkBtn').onclick =function(e) {
        e.preventDefault()
        
        // email 값 변수 담기
        let _iduse = document.querySelector("#id");

        // database에 해당 email 찾기 위해 서버로 값 전송
        $.ajax({
          url: "/emailCheck", // /abc라면 메인 홈페이지 / 에서 보낸 값은 /abc 경로에 담기는 개념
          type: "post",
          data: {
            email: _iduse.value,
          },
          success: function (data) {
            //console.log(data);
            if (data == "usable") {
              if (
                confirm(
                  "사용 가능합니다. " +
                    " 사용 하시겠습니까? \n예 누를 시 수정 불가"
                ) == true
              ) {
                _iduse.readOnly = true;
                document
                  .querySelector("#hidden_id")
                  //.setAttribute("value", check);
              }
              idAble = 1;
            } else if (data == "disusable") {
              alert("이미 존재하는 email 입니다.");
              idAble = 0;
              document.querySelector(".btn").disabled = true;
              document.querySelector(".emailcheck").innerHTML =
            "이미 존재하는 email 입니다.";
            } else {
              alert("잘못된 요청입니다.");
              idAble = 0;
            }
          },
        });
      }

      // a ~ e = 1 의 조건이 만족되어야 회원가입 버튼 활성화
      // 0으로 변수 선언
      let a = 0;
      let b = 0;
      let c = 0;
      let d = 0;
      let e = 0;
      let sum_ = a + b + c + d + e;
      //이메일 정규식
      document.querySelector("#id").onkeyup = function () {
        let id = this.value;
        let idreg =
          /^[0-9a-zA-Z]([-_\.]?[0-9a-zA-Z])*@[0-9a-zA-Z]([-_\.]?[0-9a-zA-Z])*\.[a-zA-Z]{2,3}$/g;
        //정규식 Pass
        if (idreg.test(id)) {
          document.querySelector(".emailcheck").innerHTML = "";
          document.querySelector(".checkbtn_disable").disabled = false;
          document.querySelector(".checkbtn_disable").classList.add("checkbtn_able");
          a = 1;
          console.log(a);
        //정규식 fail
        } else if (id == "") {
          document.querySelector(".emailcheck").innerHTML = "";
          document.querySelector(".checkbtn_disable").disablsed = true;
          document.querySelector(".checkbtn_disable").classList.remove("checkbtn_able");
          a = 0;
          console.log(a);
        //정규식 fail
        } else {
          document.querySelector(".emailcheck").innerHTML =
            "이메일을 입력하세요 ex)rudghks0981@gmail.com";
            document.querySelector(".checkbtn_disable").disabled = true;
            document.querySelector(".checkbtn_disable").classList.remove("checkbtn_able");
          a = 0;
          console.log(a);
        }
      };

      //비밀번호 정규식
      document.querySelector("#password").onkeyup = function () {
        let password = this.value;
        let passwordreg =
          /^(?=.*[A-Za-z])(?=.*\d)(?=.*[@$!%*#?&])[A-Za-z\d@$!%*#?&]{8,15}$/g;
        //정규식 Pass
        if (passwordreg.test(password)) {
          document.querySelector(".passwordcheck").innerHTML = "";
          b = 1;
          console.log(b);
        //정규식 fail
        } else if (password == "") {
          document.querySelector(".passwordcheck").innerHTML = "";
          b = 0;
          console.log(b);
        //정규식 fail
        } else {
          document.querySelector(".passwordcheck").innerHTML =
            "1개이상의 특수문자 대문자 소문자 숫자를 입력하세요";
          b = 0;
          console.log(b);
        }
      };
      //비밀번호 확인 정규식
      document.querySelector("#password_a").onkeyup = function () {
        let password_a = this.value;
        //정규식 Pass
        if (password_a == password.value) {
          document.querySelector(".passwordre").innerHTML = "";
          c = 1;
          console.log(c);
        //정규식 fail
        } else if (password_a == "") {
          document.querySelector(".passwordre").innerHTML = "";
          c = 0;
          console.log(c);
        //정규식 fail
        } else {
          document.querySelector(".passwordre").innerHTML =
            "패스워드가 동일하지 않습니다.";
          c = 0;
          console.log(c);
        }
      };
      //이름 정규식
      document.querySelector("#name").onkeyup = function () {
        let name = this.value;
        let namereg = /^[가-힣]{2,6}$/g;
        //정규식 Pass
        if (namereg.test(name)) {
          document.querySelector(".namecheck").innerHTML = "";
          d = 1;
          console.log(d);
        //정규식 fail
        } else if (name == "") {
          document.querySelector(".namecheck").innerHTML = "";
          d = 0;
          console.log(d);
        //정규식 fail
        } else {
          document.querySelector(".namecheck").innerHTML =
            "두글자이상 한글을 입력하세요";
          d = 0;
          console.log(d);
        }
      };
      //핸드폰 정규식
      document.querySelector("#phoneNum").onkeyup = function () {
        let phoneNum = this.value;
        let phonereg = /^01([0|1|6|7|8|9])-?([0-9]{3,4})-?([0-9]{4})$/g;
        //정규식 Pass
        if (phonereg.test(phoneNum) || phoneNum == "") {
          document.querySelector(".phonecheck").innerHTML = "";
          e = 1;
          console.log(e);
        //정규식 fail
        } else if (phoneNum == "") {
          document.querySelector(".phonecheck").innerHTML = "";
          e = 0;
          console.log(e);
        //정규식 fail
        } else {
          document.querySelector(".phonecheck").innerHTML =
            "숫자 및 -만 입력 가능합니다.";
          e = 0;
          console.log(e);
        }
      };
      console.log(sum_);
      window.onkeyup = function () {
        if (idAble === 1 && a == 1 && b == 1 && c == 1 && d == 1 && e == 1) {
          document.querySelector(".btn").disabled = false;
        } else {
          document.querySelector(".btn").disabled = true;
        }
      };

      
      document.querySelector(".btn").onclick = function () {
        
      let email = document.querySelector('#id');
      let password = document.querySelector('#password');
      let name = document.querySelector('#name');
      let phone = document.querySelector('#phoneNum');
      let birth = document.querySelector('#birth');

      $.ajax({
        url: '/signUpPro',
        type: 'post',
        data: {
          email: email.value,
          password: password.value,
          name: name.value,
          phone: phone.value,
          birth: birth.value,
        },
        success: function(data) {
          if(data === 'success'){
           alert("회원 가입을 축하합니다.");
           window.location.reload();         
          }else if(data === 'phone') {
            alert('이미 존재하는 핸드폰 입니다.');
          }
        }
      })
    }
    </script>
  </body>
</html>
